#include <stdio.h>

int main() {
    int n, a = 0, b = 1, c = 0, sum = 0;
    printf("Enter a positive integer: ");
    scanf("%d", &n);

    while (c <= n) {
        if (c % 2 == 0) {
            sum += c;
        }
        a = b;
        b = c;
        c = a + b;
    }

    printf("The sum of even numbers in the Fibonacci series up to %d is %d\n", n, sum);

    return 0;
}
