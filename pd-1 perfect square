 #include <stdio.h>
 #include<math.h>

int main() {
    int num, i, sum = 0,squrt;

    printf("Enter a number: ");
    scanf("%d", &num);

    // Check if the number is perfect or not
    for (i = 1; i < num; i++) {
        if (num % i == 0) {
            sum += i;
        }
    }
    if (sum == num) {
        // If the number is perfect, find its square root
        printf("The square root of %d is %f\n", num,squrt);
    }
	else 
	{
        printf("%d is not a perfect number.\n", num);
    }
    return 0;
}
